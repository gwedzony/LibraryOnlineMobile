<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.ViewAll"
             NavigationPage.HasNavigationBar="False"
             Background="#4F3F9B">
    
    <Grid RowDefinitions=".2*,.8*">
        <VerticalStackLayout Spacing="10">
            <Label Margin="25,25,0,0" FontAttributes="Bold" 
                   Text="Wszystkie ksiązki"
                   TextColor="White"
                   HorizontalOptions="Center"/>
            
            <Grid Margin="25,10,0,0" ColumnDefinitions=".9*,.1*">
                <Border Padding="0" StrokeShape="RoundRectangle 8,8,8,8">
                    <Grid ColumnDefinitions=".1*,.9*">
                        <Entry Grid.Column="1" FontFamily="bold" 
                               Placeholder="Search ..." 
                               PlaceholderColor="#9D9D9D" 
                               TextColor="White"></Entry>
                    </Grid>
                </Border>
            </Grid>
        </VerticalStackLayout>
        
        <Grid Grid.Row="1">
            <RoundRectangle BackgroundColor="#F2F1F6" CornerRadius="25,25,0,0"></RoundRectangle>
            
            <CollectionView>
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String> Store1 </x:String>
                        <x:String> Store2 </x:String>
                        <x:String> Store3 </x:String>
                        <x:String> Store4 </x:String>
                        <x:String> Store5 </x:String>
                        <x:String> Store5 </x:String>
                        <x:String> Store5 </x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="15" Orientation="Vertical"></LinearItemsLayout>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="20,20,20,0" HeightRequest="250" RowDefinitions=".6*,.4*">
                            <RoundRectangle Grid.RowSpan="2" Background="White" CornerRadius="10">
                                <RoundRectangle.Shadow>
                                <Shadow Brush="#CFD0D4" Opacity="0.8" Offset="10,10"></Shadow>
                                </RoundRectangle.Shadow>
                            </RoundRectangle>
                            <Grid ColumnDefinitions=".4*,.2*,.4*" RowDefinitions=".6*,.4*">
                                <Image Grid.RowSpan="2" Grid.ColumnSpan="3" Aspect="AspectFill" Source="pobrane.jpg"/>
                                
                            </Grid>
                            <!--Grid pod zdjęciem -->
                            <Grid Grid.Row="1" Margin="0,10,0,0" Padding="10" ColumnDefinitions="*,*,*" RowDefinitions="*,*">
                                <Label Grid.ColumnSpan="3" FontFamily="bold" FontSize="18" HorizontalOptions="Start" TextColor="Black" Text="Coś tam"></Label>
                                <Label Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" FontFamily="regular" HorizontalOptions="Start" Text="Jakiś tekst"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        
    </Grid>
    
    
    
</ContentPage>